{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["src/**/*.ts*"],
		"ignore": ["old/**"]
	},
	"formatter": {
		"formatWithErrors": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"jsxQuoteStyle": "double",
			"indentWidth": 2,
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	}
}
